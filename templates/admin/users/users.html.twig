{% extends 'admin/base_admin.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <a href="{{ path('create_user') }}" class="btn btn-success profile-button text-white mb-lg-4 ml-1">Create User</a>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="form-inline" action="" method="post">
                <div class="form-group">
                    {{ form_widget(form.name, {'attr': {
                        'class': 'form-control mr-3',
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr': {
                        'class': 'form-control mr-3',
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.status, {'attr': {
                        'class': 'form-control mr-3',
                    }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.role, {'attr': {
                        'class': 'form-control mr-3',
                    }}) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-primary profile-button mr-2" type="submit">Filter</button>
                </div>
                <div class="form-group">
                    <a href="{{ path('users') }}" class="btn btn-outline-secondary profile-button" type="submit">Reset</a>
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
    <table class="table table-responsive-sm table-bordered">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(users, 'Name', 'name') }}</th>
                <th>{{ knp_pagination_sortable(users, 'Date registered', 'date') }}</th>
                <th>{{ knp_pagination_sortable(users, 'Email', 'email') }}</th>
                <th>{{ knp_pagination_sortable(users, 'Role', 'role') }}</th>
                <th>{{ knp_pagination_sortable(users, 'Status', 'user_status') }}</th>
            </tr>
        </thead>
        {% for user in users %}
            <tbody>
                <tr>
                    <td><a href="{{ path('show_user', {'id': user.id}) }}">{{ user.name }}</a></td>
                    <td>{{ user.date }}</td>
                    <td>{{ user.email}}</td>
                    <td>{{ user_role(user.role) }}</td>
                    <td>{{ user_status(user.user_status) }}</td>
                </tr>
            </tbody>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
